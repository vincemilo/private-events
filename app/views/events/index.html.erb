<h1>Events</h1>

<% if @events %>
<ul>
    <% @events.each do |event| %>
        <li>
        <h3><%= link_to event.name, event %></h3>
        <p>Date: <%= event.date %></p>
        <p>Location: <%= event.location %></p>
        <p>Description: <%= event.description %></p>
        </li>
    <% end %>
</ul>
<% else %>
<p>No events yet...</p>
<% end %>